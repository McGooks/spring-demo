<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define your beans here -->
    <bean id="myFortune" class="com.luv2code.springdemo.HappyFortuneService"/>

    <bean id="myCoach" class="com.luv2code.springdemo.SwimCoach">
        <!-- Setup Constructor Injection-->
        <constructor-arg ref="myFortune"/>
    </bean>

    <bean id="myCricketCoach" class="com.luv2code.springdemo.CricketCoach">
        <!-- Setup setter Injection-->
        <property name="fortuneService" ref="myFortune"/>
        <property name="emailAddress" value="glenn.marshalladams@icloud.com"/>
        <property name="team" value="The Blues"/>
    </bean>

</beans>





